<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@color/colorText"
    tools:context="com.ga.roosevelt.mapboxapp.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        mapbox:cardCornerRadius="10dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/lblNeighborhoodName"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#DC143C"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.mapbox.mapboxsdk.maps.MapView
                android:id="@+id/mapBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                mapbox:center_latitude="40.752935"
                mapbox:center_longitude="-63.981422"
                mapbox:style_url="@string/style_dark"
                mapbox:tilt="90"
                mapbox:zoom="8"
                mapbox:compass_enabled="false"
                mapbox:rotate_enabled="false"
                mapbox:tilt_enabled="false"

                />
            <TextView
                android:id="@+id/lblPlaceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:layout_gravity="bottom|center_horizontal"
                android:textSize="20sp"
                android:padding="10dp"
                android:text="Possible Places"/>

        </FrameLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        mapbox:cardCornerRadius="10dp"
        mapbox:cardBackgroundColor="@color/colorBackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Neighborhoods"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/lblNeighborhoods" />
        <ListView
            android:id="@+id/lstNeighborhoods"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="190dp"/>
    </android.support.v7.widget.CardView>


</LinearLayout>

