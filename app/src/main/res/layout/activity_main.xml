<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@color/colorText"
    tools:context="com.ga.roosevelt.mapboxapp.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        mapbox:cardCornerRadius="10dp"
        android:layout_weight="1"
        mapbox:cardBackgroundColor="@color/colorBackground">
        <com.ga.roosevelt.mapboxapp.custom_views.CustomTextview
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="CRIME COMPUTER"
            android:textSize="20sp"/>
    </android.support.v7.widget.CardView>


    <!--2nd screen/card -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        mapbox:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/lblNeighborhoodName"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#DC143C"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mapbox.mapboxsdk.maps.MapView
                android:id="@+id/mapBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                mapbox:center_latitude="40.752935"
                mapbox:center_longitude="-63.981422"
                mapbox:style_url="@string/style_dark"
                mapbox:my_location_enabled="true"
                mapbox:tilt="50"
                mapbox:zoom="8"
                mapbox:compass_enabled="false"
                mapbox:rotate_enabled="false"
                mapbox:tilt_enabled="false"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="@color/colorBackground"
                android:gravity="center">

                <com.ga.roosevelt.mapboxapp.custom_views.CustomTextview
                    android:id="@+id/txtNearestPlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Getting locations..."/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="@color/colorBackground"
                android:layout_gravity="bottom"
                android:gravity="center">

                <com.ga.roosevelt.mapboxapp.custom_views.CustomTextview
                    android:id="@+id/txtDistanceToNearest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />

            </LinearLayout>

        </FrameLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        mapbox:cardCornerRadius="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        mapbox:cardBackgroundColor="@color/colorBackground">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--Hide this frame layout-->
            <FrameLayout
                android:id="@+id/frmLayoutNeighborhoods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neighborhoods"
                    android:textSize="20sp"
                    android:textColor="@color/colorText"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:id="@+id/lblNeighborhoods" />
                <ListView
                    android:id="@+id/lstNeighborhoods"
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"/>

            </FrameLayout>



        <FrameLayout
            android:id="@+id/frmLayoutOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_horizontal_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <com.ga.roosevelt.mapboxapp.custom_views.MenuButton
                    android:id="@+id/btnInvestigate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:text="INVESTIGATE"/>

                <com.ga.roosevelt.mapboxapp.custom_views.MenuButton
                    android:id="@+id/btnWarrant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/colorText"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="VISIT INTERPOL"/>

            </LinearLayout>

            </FrameLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
