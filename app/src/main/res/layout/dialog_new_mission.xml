<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="253dp"
    android:layout_height="253dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/colorText">

    <android.support.v7.widget.CardView android:layout_width="248dp"
        android:layout_height="248dp"
        android:layout_gravity="center_horizontal|center_vertical"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/colorBackground">
    
    <LinearLayout
        android:orientation="vertical" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4">
        
        <com.ga.roosevelt.mapboxapp.custom_views.CustomTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Are you sure you want to end your current mission?"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <com.ga.roosevelt.mapboxapp.custom_views.MenuButton
                android:id="@+id/btnYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="YES"
                android:layout_marginBottom="8dp"/>

            <com.ga.roosevelt.mapboxapp.custom_views.MenuButton
                android:id="@+id/btnNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NO"/>

        </LinearLayout>

    </LinearLayout>
        </android.support.v7.widget.CardView>
    
</android.support.v7.widget.CardView>